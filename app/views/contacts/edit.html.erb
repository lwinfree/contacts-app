<h3>Edit Contact</h3>
<form action="/contacts/<%=@contact.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div>
    First name: <input type="text" name="first_name" value="<%=@contact.first_name%>">
  </div>
  <div>
    Last name: <input type="text" name="last_name" value="<%=@contact.last_name%>">
  </div>
  <div>
    Email: <input type="text" name="email" value="<%=@contact.email%>">
  </div>
  <div>
    Choose a user:
    <select name="user_id">
      <% @users.each do |user|%>
        <option value="<%=user.id%>"><%=user.name%></option>
    <%end%>
    </select>
  </div>
  <input type="submit" name="Edit Contact">
</form>

<a href="/contacts/<%=@contact.id%>" data-method="delete">Delete Contact</a>